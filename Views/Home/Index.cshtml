@model Login_and_Registration.Models.User

<div class="messages">
    @{
        if (ViewBag.error != null)
        {
            <p>@ViewBag.error</p>
        }
    }
</div>
<div class="col-1-2">
    <h2>Register</h2>
    <form asp-controller="Home" asp-action="Register" method="post">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName"/>
        <label asp-for="LastName"></label>
        <input asp-for="LastName"/>
        <label asp-for="Email"></label>
        <input asp-for="Email"/>
        <label asp-for="Password"></label>
        <input asp-for="Password"/>
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword"/>
        <button type="submit" class="button">Create new User</button>
    </form>
</div>

<div class="col-1-2">
    <h2>Login</h2>
    <form asp-controller="Home" asp-action="Login" method="post">
        <label for="email">Email</label>
        <input type="text" name="email">

        <label for="password">Password</label>
        <input type="password" name="password">

        <input type="submit" value="Login" class="button">
    </form>
</div>